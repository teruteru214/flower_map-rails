<ul class='flex justify-center py-3'>
  <li>
    <div class="tooltip tooltip-bottom" data-tip=<%= t 'defaults.edit' %>>
      <%= link_to edit_unknown_flower_path(unknown_flower), id: "button-edit-#{unknown_flower.id}" do %>
        <%= image_tag 'pen.png', class: "w-9 h-9 mt-0.5" %>
      <% end %>
    </div>
  </li>
  <li>
    <div class="tooltip tooltip-bottom" data-tip=<%= t 'defaults.delete' %>>
      <%= button_to unknown_flower_path(unknown_flower), id: "button-delete-#{unknown_flower.id}", method: :delete, data: { confirm: '削除完了しました' } do %>
        <%= image_tag 'trash.png', class: "w-9 h-9" %>
      <% end %>
    </div>
  </li>
</ul>
