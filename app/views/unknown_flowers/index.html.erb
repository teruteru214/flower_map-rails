<div class="bg-base-200">
  <div class="text-center">
    <h1 class="sm:text-4xl text-3xl font-serif p-10 text-center text-accent-focus"><%= t '.title' %></h1>
    <%= link_to (t 'defaults.question'), new_unknown_flower_path, class: "btn btn-primary font-light mt-4" %>
    <% if @unknown_flowers.present? %>
      <div class="flex flex-wrap justify-center">
        <%= render @unknown_flowers %>
      </div>
    <% else %>
      <p><%= t '.not_posted' %></p>
    <% end %>
  </div>
  <div class="flex justify-center pl-16">
    <%= paginate @unknown_flowers, theme: 'flower' %>
  </div>
</div>
