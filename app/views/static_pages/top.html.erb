<div class="hero min-h-screen" style="background-image: url('https://storage-box24.s3.ap-northeast-1.amazonaws.com/flower-photograph%E3%81%AE%E3%82%B3%E3%83%92%E3%82%9A%E3%83%BC2.jpg');">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <h1 class="mb-5 sm:text-4xl text-2xl font-serif font-bold"><%= t '.theme' %></h1>
      <p class="font-serif"><%= t '.description' %></p>
      <p class="font-serif"><%= t '.description2' %></p>
      <% if !logged_in? %>
        <%= link_to (t 'defaults.login'), login_path, class: "btn btn-primary font-bold mt-4"%>
      <% end %>
    </div>
  </div>
</div>
<h1 class="mt-5 sm:text-4xl text-2xl font-serif text-center"><%= t '.treatment' %></h1>
<div class="mb-6 p-4 flex flex-col text-center items-center">
  <div class="inline-flex items-center justify-center justify-center mb-5 flex-shrink-0">
    <%= image_tag 'door.png', class: "sm:w-96 sm:h-96 w-72 h-72" %>
  </div>
  <div class="flex-grow">
    <h2 class="font-serif text-gray-900 text-lg title-font font-medium mb-3"><%= t '.part1' %></h2>
    <p class="leading-relaxed text-base text-gray-500"><%= t ".description3" %></p>
  </div>
</div>
<div class="mb-6 p-4 flex flex-col text-center items-center">
  <div class="inline-flex items-center justify-center justify-center mb-5 flex-shrink-0">
    <%= image_tag 'photographer.png', class: "sm:w-96 sm:h-96 w-72 h-72" %>
  </div>
  <div class="flex-grow">
    <h2 class="font-serif text-gray-900 text-lg title-font font-medium mb-3"><%= t '.part2' %></h2>
    <p class="leading-relaxed text-base text-gray-500"><%= t '.description4' %></p>
  </div>
</div>
<div class="mb-6 p-4 flex flex-col text-center items-center">
  <div class="inline-flex items-center justify-center justify-center mb-5 flex-shrink-0">
    <%= image_tag 'marker_human.png', class: "sm:w-96 sm:h-96 w-72 h-72" %>
  </div>
  <div class="flex-grow">
    <h2 class="font-serif text-gray-900 text-lg title-font font-medium mb-3"><%= t '.part3' %></h2>
    <p class="leading-relaxed text-base text-gray-500"><%= t '.description5' %></p>
  </div>
</div>
<div class="flex justify-center">
  <% if !logged_in? %>
    <%= link_to (t 'defaults.new_user'), new_user_path, class: "btn btn-primary font-bold mb-4"%>
  <% end %>
</div>
