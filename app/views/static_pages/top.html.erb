<div class="hero min-h-screen" style="background-image: url('assets/flower-photograph.jpg');">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <h1 class="mb-5 text-3xl font-medium"><%= t '.theme' %></h1>
      <p><%= t '.description' %></p>
      <p><%= t '.description2' %></p>
      <% if !logged_in? %>
        <%= link_to (t 'defaults.login'), login_path, class: "btn btn btn-accent text-white font-bold"%>
      <% end %>
    </div>
  </div>
</div>
