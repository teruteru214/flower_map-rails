<label for="my-modal-4" class="btn"><%= t 'defaults.answer' %></label>
<input type="checkbox" id="my-modal-4" class="modal-toggle" />
<label for="my-modal-4" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <%= form_with model: @answer, url: [@unknown_flower, @answer], local: true do |f| %>
      <div class="flex flex-col">
        <%= f.text_area :body, class: 'textarea textarea-bordered sm:w-96 w-72 mb-3', placeholder: (t 'defaults.answer') %>
        <%= f.submit (t 'defaults.post_comment'), class: 'btn btn-sm w-20' %>
      </div>
    <% end %>
  </label>
</label>
