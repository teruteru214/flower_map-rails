<header>
  <div class="navbar bg-green-700">
    <div class="flex-1">
      <%= link_to root_path do%>
        <%= image_tag 'flower-title.png' %>
      <% end %>
    </div>
    <div class="hidden md:flex">
      <div class='items-stretch'>
        <%= link_to new_user_path do %>
          <label class="btn btn-ghost rounded-btn flex-col font-normal">
            <%= image_tag 'new_user.png', class: "w-6 h-6" %>
            <div class="text-xs text-white"><%= t 'defaults.new_user' %></div>
          </label>
        <% end %>
        <%= link_to login_path do %>
          <label class="btn btn-ghost rounded-btn flex-col font-normal">
            <%= image_tag 'login.png', class: 'w-6 h-6' %>
            <div class="text-xs text-white"><%= t 'defaults.login_user' %></div>
          </label>
        <% end %>
      </div>
    </div>
    <div class="md:hidden">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost m-1 text-white">Menu</label>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <%= link_to (t 'defaults.new_user'), new_user_path %>
          </li>
          <li>
            <%= link_to (t 'defaults.login_user'), login_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
