<div class="hero min-h-screen bg-base-200">
  <div class="hero-content">
    <div class="max-w-md">
      <h1 class="text-3xl font-bold p-10 text-center">投稿画面</h1>
      <div id='map' style="height: 500px; width: 380px"></div>
      <%= javascript_include_tag 'google_map_show' %>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_CLOUD_API_KEY'] %>&callback=initMap" async defer></script>
      <label class="label">
        <span class="label-text">住所</span>
      </label>
      <%= @flower.address %>
      <label class="label">
        <span class="label-text">花の名前</span>
      </label>
      <%= @flower.name %>
      <label class="label">
        <span class="label-text">見つけた日付</span>
      </label>
      <%= @flower.datetime %>
      <label class="label">
        <span class="label-text">花の状態</span>
      </label>
      <%= @flower.status %>
      <div class="flex my-4">
        <%= render 'comments/form', { flower: @flower, comment: @comment } %>
        <%= render 'comments/comments', { comments: @comments } %>
        <p class='text-2xl text-center mt-4'>編集/削除</p>
        <%= render 'crud_menus', flower: @flower if current_user.own?(@flower) %>
      </div>
    </div>
  </div>
</div>
