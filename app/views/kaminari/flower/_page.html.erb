<% if page.current? %>
    <li class="page current btn-group">
      <%= link_to_if page.current?, page, url, {remote: remote, rel: page.rel, class: "btn btn-primary" } %>
    </li>
<% else %>
  <div class="hidden md:flex">
    <li class="page btn-group">
      <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "btn btn-primary" } %>
    </li>
  </div>
<% end %>
