<div class="hero min-h-screen bg-base-200">
  <%= form_with model: @user, url: profile_path, local: true do |f| %>
    <h1><%= t '.title' %></h1>
    <div class="my-4">
      <div class="pt-5 pb-3">
        <%= f.label :name %>
      </div>
      <%= f.text_field :name, class: 'input input-bordered input-accent w-full max-w-xs' %>
    </div>
    <div class="my-4">
      <div class="pt-5 pb-3">
        <%= f.label :email %>
      </div>
      <%= f.email_field :email, class: 'input input-bordered input-accent w-full max-w-xs' %>
    </div>
    <div class="my-4">
      <div class="pt-5 pb-3">
        <%= f.label :avatar, class: 'block mb-1 pr-4' %>
      </div>
      <%= f.file_field :avatar, class: 'file-input file-input-bordered file-input-accent w-full max-w-xs',
       onchange: 'previewImage()', accept: 'image/*' %>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="my-4">
      <%= image_tag @user.avatar.url,
                    class: 'w-24 h-24 rounded-full',
                    id: 'preview',
                    size: '100x100'%>
      <%= javascript_include_tag 'image' %>
    </div>
    <div class="my-8 flex justify-center">
      <%= f.submit class: 'btn btn-active btn-accent text-white' %>
    </div>
  <% end %>
</div>
